<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

<!--- TOP LAYOUT -->

        <RelativeLayout
            android:id="@+id/reLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background">

            <include layout="@layout/people_top_tabs" />

        </RelativeLayout>

        <!--- MIDLE -->
        <RelativeLayout
            android:id="@+id/reLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/reLayout1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <include layout="@layout/people_center_viewpager" />

        </RelativeLayout>

        <include layout="@layout/people_bottom_navigation_view"/>




    </RelativeLayout>


</android.support.design.widget.NavigationView>


